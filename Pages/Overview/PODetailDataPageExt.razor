                                     EditButtonVisible="true"
                                     CancelButtonVisible="true"
                                     SaveButtonVisible="true"
                                     NewButtonVisible="true" />
            </Columns>
        </DxGrid>

    </DxTabPage>

    <DxTabPage Text="Freight Data">
