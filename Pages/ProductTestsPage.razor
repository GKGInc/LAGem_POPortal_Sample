        , item.RequestedDate // 2
        , item.RequestedBy  // 3
        , item.ReceivedDate // 4
        , item.PassedDate   // 5
        , item.PassedBy     // 6
        , item.FailedDate   // 7
        , item.FailedBy     // 8
        , item.Comments     // 9
        , item.Attachment   // 10
        );

        using (var uow = new UnitOfWork())
        {
            await uow.ExecuteNonQueryAsync(fullQuery);
        }

        LoadGridData();
    }
